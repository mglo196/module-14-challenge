{
  "compilerOptions": {
    "target": "ES2020",                 // Compile to ES2020 JavaScript
    "module": "ESNext",                 // Use the latest ECMAScript module system
    "moduleResolution": "node",         // Resolve modules the same way Node.js does
    "jsx": "react-jsx",                 // Use React 17+ JSX transform
    "strict": true,                     // Enable strict mode for better type checking
    "skipLibCheck": true,               // Skip type checking of declaration files (for speed)
    "allowJs": true,                    // Allow JavaScript files (if needed)
    "esModuleInterop": true,            // Enable compatibility with CommonJS modules
    "lib": ["ES2020", "DOM"],           // Include ES2020 and DOM types
    "allowImportingTsExtensions": true  // Allow importing .tsx files without specifying the extension
  },
  "include": [
    "client/src/**/*"                   // Ensure this points to the correct directory (client/src)
  ],
  "exclude": [
    "node_modules"                      // Exclude node_modules from the compilation
  ]
}
