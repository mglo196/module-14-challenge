{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",       // Enable React JSX support
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "allowImportingTsExtensions": true 
  },
  "include": [
    "client/src/**/*"               // All files inside client/src/
  ],
  "exclude": [
    "node_modules"           // Exclude node_modules
  ]
}
