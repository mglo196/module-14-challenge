{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",  // Try switching to "node" if "bundler" causes issues
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,  // Keep this if relying on bundler to emit files

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* JSX */
    "jsx": "react-jsx"  // Correct JSX setup for React 17+
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
