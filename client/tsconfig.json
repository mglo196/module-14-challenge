{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "allowImportingTsExtensions": true,
    "noEmit": true  // Add this line
  },
  "include": [
    "client/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
